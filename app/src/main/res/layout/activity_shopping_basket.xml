<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.patrick.grocr2.shoppingBasket">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/orderButton"
        android:layout_marginBottom="0dp"
        android:clickable="false"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_marginBottom="64dp"
        android:text=" "
        android:layout_above="@+id/orderButton"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignParentStart="false"
        android:allowUndo="false"
        android:checked="false"
        android:foregroundGravity="right"
        android:gravity="top|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prefer Refugees"
        android:id="@+id/textView"
        android:textSize="14sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/orderButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deliver until"
        android:id="@+id/textView2"
        android:layout_marginBottom="27dp"
        android:textSize="16sp"
        android:layout_above="@+id/checkBox"
        android:layout_toStartOf="@+id/editText"
        android:layout_marginEnd="23dp" />

    <EditText
        android:layout_width="1px"
        android:layout_height="1px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/checkBox"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="1px"
        android:layout_height="1px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/textView3"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="1px"
        android:layout_height="1px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=":"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/editText4"
        android:layout_toEndOf="@+id/textView4"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/textView5"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=":"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/editText4" />

    <TextView
        android:layout_width="1px"
        android:layout_height="1px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/orderButton" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/numOfItems"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/editText"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Items"
        android:id="@+id/textView7"
        android:textSize="16sp"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fr."
        android:id="@+id/textView8"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/totalPrice"
        android:layout_toStartOf="@+id/totalPrice" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/totalPrice"
        android:layout_above="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/textView"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shopping Basket"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/stuff"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="19dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anfrageversendet"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/editText" />

</RelativeLayout>
