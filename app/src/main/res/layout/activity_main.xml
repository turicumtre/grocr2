<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patrick.grocr2.MainActivity"
    android:background="@drawable/background2">

    <Button

        android:layout_width="1px"
        android:layout_height="1px"
        android:text="logout"
        android:id="@+id/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView1" />

    <Button
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shoppin basket"
        android:id="@+id/shoppingBasketButton"
        android:layout_below="@+id/order"
        android:layout_alignEnd="@+id/order" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:minHeight="230dp"
        android:minWidth="230dp"
        android:maxHeight="230dp"
        android:maxWidth="230dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="40dp"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="grocr"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textSize="80dp"
        android:textColor="#34AE94"
        android:layout_above="@+id/collect"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:minHeight="230dp"
        android:minWidth="50dp"
        android:maxHeight="80dp"
        android:maxWidth="350dp"
        android:text=" "
        android:id="@+id/order"
        android:paddingBottom="32dp"
        android:layout_above="@+id/logoutButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/order"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:minHeight="230dp"
        android:minWidth="50dp"
        android:maxHeight="80dp"
        android:maxWidth="350dp"
        android:text=" "
        android:id="@+id/collect"
        android:background="@drawable/collector"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/order"
        android:layout_alignStart="@+id/order" />
</RelativeLayout>
